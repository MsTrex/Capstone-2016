<Window x:Class="PresentationLayer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <DockPanel LastChildFill="True">
            <Menu DockPanel.Dock="Top" Height="Auto">
                <Button Name="Login" Content="Login" HorizontalAlignment="Right" Margin="1px" Padding="2px" Click="Login_Click"></Button>
                <Button Name="NewUser" Content="New User" Margin="1px" Padding="2px" Click="NewUser_Click"></Button>

            </Menu>


        </DockPanel>

    </Grid>
</Window>
