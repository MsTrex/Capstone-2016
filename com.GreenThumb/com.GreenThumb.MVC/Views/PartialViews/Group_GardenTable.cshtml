@model com.GreenThumb.BusinessObjects.Group

<h2></h2>
<p></p>
<table class="table">  
    <thead>
        <tr>
            <th>
                Garden #
            </th>
            <th>
                Group #
            </th>
            <th>
                Name
            </th>
            <th>
                @Html.DisplayNameFor(m => m.GardenList.SingleOrDefault().UserID)
            </th>
            <th>
                Description
            </th>
            <th>
                Region
            </th>
        </tr>
    </thead>
    <tbody>
       @foreach (com.GreenThumb.BusinessObjects.Garden GardenInfo in Model.GardenList)
        {
            <tr>
                <td>
                    @GardenInfo.GardenID 
                </td>
                <td>
                    @GardenInfo.GroupID
                </td>
                <td>
                    @GardenInfo.GardenName
                </td>
                <td>
                    @GardenInfo.UserID
                </td>
                <td>
                    @GardenInfo.GardenDescription
                </td>
                <td>
                    @GardenInfo.GardenRegion
                </td>
            </tr>
        }
    </tbody>
</table>