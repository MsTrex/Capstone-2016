@using com.GreenThumb.BusinessObjects;
@model IEnumerable<GardenNeed>

<div>
    @if (0 < Model.Count())
    {
        <table class="table table">
            <thead>
                <tr>
                    <th>@Html.DisplayNameFor(m => m.FirstOrDefault().Title)</th>
                    <th>@Html.DisplayNameFor(m => m.FirstOrDefault().Description)</th>
                    <th>@Html.DisplayNameFor(m => m.FirstOrDefault().DateCreated)</th>
                    <th>Options</th>
                </tr>
            </thead>
            <tbody>
                @foreach (GardenNeed need in Model)
                {
                    <tr>
                        <td>@need.Title</td>
                        <td>@need.Description</td>
                        <td>@need.DateCreated</td>
                        <td>@Html.ActionLink("Contribute", "SendContribution", "Donation", new { id = need.GardenNeedId }, null)</td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p class="h4">No needs found.</p>
    }
</div>
