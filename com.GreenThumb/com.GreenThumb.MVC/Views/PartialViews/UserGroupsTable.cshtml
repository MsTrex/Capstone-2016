@using com.GreenThumb.MVC.Models;
@model IEnumerable<GroupIndexViewModel.UserGroupViewModel>

@{
    ViewBag.Title = "ViewUserGroups";
}

<h2>ViewUserGroups</h2>
<p></p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(m => m.SingleOrDefault().Name)
            </th>
            <th>
                @Html.DisplayNameFor(m => m.SingleOrDefault().LeaderUserName)
            </th>
            <th>
                @Html.DisplayNameFor(m => m.SingleOrDefault().LeaderEmail)
            </th>
            <th>
                @Html.DisplayNameFor(m => m.SingleOrDefault().CreatedDate)
            </th>
            <th>
                Options
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (GroupIndexViewModel.UserGroupViewModel groupView in Model)
        {
            <tr>
                <td>
                    @Html.ActionLink(groupView.Name, "Details", "Group", new { id = groupView.GroupId }, null)
                </td>
                <td>
                    @groupView.LeaderUserName
                </td>
                <td>
                    @groupView.LeaderEmail
                </td>
                <td>
                    @groupView.CreatedDate
                </td>
                <td>
                    @Html.ActionLink("Leave Group", "LeaveGroup", "Group", new { group = groupView.GroupId }, null)
                </td>
            </tr>
        }
    </tbody>
</table>