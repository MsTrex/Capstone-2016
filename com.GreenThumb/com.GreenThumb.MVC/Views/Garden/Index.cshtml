@model IEnumerable<com.GreenThumb.BusinessObjects.Group>

@{
    ViewBag.Title = "Gardens";
}

<div class="row">
    <div class="col-sm-12 col-lg-12">
        <h1>Gardens</h1>
    </div>
</div>

@if (Model.Count() != 0)
{
<div class="row round dark-div">
    <div class="col-lg-12">
        <h3>My Gardens</h3>
        <h2>Gardens I belong to, by group:</h2>
        @foreach (com.GreenThumb.BusinessObjects.Group group in Model)
        {
            <div class="UserGardensTable">
                @Html.Partial("~/Views/PartialViews/Group_GardenTable.cshtml", group)
            </div>

        }
    </div>
</div>
}
else
{
    <div class="green-btn">@Html.ActionLink("Go to Groups", "Index", "Garden")</div>
    <div class="green-btn">@Html.ActionLink("Donate To A Group", "Index", "Donation")</div>
}

